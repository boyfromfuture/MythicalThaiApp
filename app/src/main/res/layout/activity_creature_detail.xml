<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coal"
    tools:context=".ui.CreatureDetailActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Decorative top border -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/gold">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/gold_light"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coal"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/gold_light"/>
            </LinearLayout>

            <!-- Creature image with ornamental border -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/corner_ornament"
                        android:layout_gravity="start|top"/>

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/corner_ornament"
                        android:layout_gravity="end|top"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border_gold_double"
                        android:padding="12dp"
                        android:layout_margin="8dp">

                        <ImageView
                            android:id="@+id/imgCreature"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="Creature Image"/>
                    </LinearLayout>

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/corner_ornament"
                        android:layout_gravity="start|bottom"/>

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/corner_ornament"
                        android:layout_gravity="end|bottom"/>
                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="0dp">  <!-- Remove bottom padding -->

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/divider_ornamental"
                    android:layout_marginBottom="20dp"/>

                <!-- Creature name with favorite button -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border_gold_frame"
                        android:padding="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvCreatureName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Creature Name"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/gold"
                                android:fontFamily="serif"
                                android:letterSpacing="0.08"
                                android:layout_centerInParent="true"/>

                            <ImageButton
                                android:id="@+id/btnFavorite"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_favorite_border"
                                android:contentDescription="Favorite Creature"
                                app:tint="@android:color/holo_red_dark"
                                android:padding="4dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </FrameLayout>

                <!-- Creature info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_gold_thick"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvCreatureInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This is a legendary creature in Thai mythology..."
                        android:textSize="16sp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/text_light"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>

                <!-- Generate Story button -->
                <Button
                    android:id="@+id/btnGenerateStory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="âœ¨ Generate Story"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_gold"
                    android:textColor="@color/coal"
                    android:elevation="6dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Story Section -->
                <LinearLayout
                    android:id="@+id/cardStorySection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_gold_double"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <!-- Header row with title + heart -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="24dp"
                                android:background="@color/gold"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“– Generated Story"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/gold"
                                android:fontFamily="serif"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnFavoriteStory"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_favorite_border"
                            android:contentDescription="Favorite Story"
                            app:tint="@android:color/holo_red_dark"
                            android:padding="4dp"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvGeneratedStory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(AI story will appear here...)"
                        android:textSize="16sp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/text_light"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom border -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/gold"
                android:layout_marginTop="12dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/gold_light"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/coal"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/gold_light"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Floating Home Button - DOES NOT SCROLL -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_home"
        android:contentDescription="Go to Home"
        app:tint="@color/coal"
        app:backgroundTint="@color/gold"
        app:elevation="8dp"
        app:borderWidth="0dp"/>

</FrameLayout>